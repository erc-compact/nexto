/*
 * Hercules Configuration
 * MPI Bonn HPC Cluster
 */

// Validate we're running on the correct cluster
if (!System.getenv('HOSTNAME')?.startsWith('h')) {
    System.err.println "ERROR: This configuration is for Hercules cluster only"
    System.exit(1)
}

params {
    // Container images
    presto_container = "/hercules/scratch/vishnu/singularity_images/presto_latest.sif"
    singularity_cachedir = "/hercules/scratch/vishnu/singularity_images"

    // Resource limits
    max_cpus = 48
    max_memory = '256.GB'
    max_time = '168.h'
}

// Module loading
process.module = 'jdk/17.0.6'

// Apptainer/Singularity configuration
apptainer {
    enabled = true
    autoMounts = true
    runOptions = '--env PYTHONNOUSERSITE=1 --nv -B /hercules -B /mandap -B /mkfs -B $HOME:$HOME'
    cacheDir = params.singularity_cachedir
    envWhitelist = 'APPTAINER_BINDPATH,APPTAINER_LD_LIBRARY_PATH'
}

// Executor configuration
executor {
    name = 'slurm'
    pollInterval = '1 min'
    queueSize = 10000
    submitRateLimit = '30 sec'
}

// Process configuration
process {
    executor = 'slurm'
    scratch = '/tmp/$USER'

    // Queue selection based on time
    queue = { task.time <= 4.h ? 'short.q' : 'long.q' }

    // Error handling
    errorStrategy = { task.exitStatus in 137..140 || task.exitStatus == 124 ? 'retry' : 'finish' }
    maxRetries = 3
    maxErrors = '-1'

    // Resource scaling on retries
    cpus = { check_max(task.attempt * 4, 'cpus') }
    memory = { check_max(8.GB * task.attempt, 'memory') }
    time = { check_max(4.h * task.attempt, 'time') }

    // Label-specific resources
    withLabel: 'process_low' {
        cpus = 4
        memory = { check_max(8.GB * task.attempt, 'memory') }
        time = { check_max(2.h * task.attempt, 'time') }
        queue = { task.time <= 4.h ? 'short.q' : 'long.q' }
        maxForks = 400
    }

    withLabel: 'process_medium' {
        cpus = 8
        memory = { check_max(16.GB * task.attempt, 'memory') }
        time = { check_max(4.h * task.attempt, 'time') }
        queue = { task.time <= 4.h ? 'short.q' : 'long.q' }
        maxForks = 400
    }

    withLabel: 'process_high' {
        cpus = 16
        memory = { check_max(32.GB * task.attempt, 'memory') }
        time = { check_max(12.h * task.attempt, 'time') }
        queue = 'long.q'
        maxForks = 200
    }

    withLabel: 'process_very_high' {
        cpus = 32
        memory = { check_max(64.GB * task.attempt, 'memory') }
        time = { check_max(24.h * task.attempt, 'time') }
        queue = 'long.q'
        maxForks = 100
    }

    // Process-specific resources
    withName: 'RFIFIND' {
        cpus = 10
        memory = { check_max(12.GB * task.attempt, 'memory') }
        time = { check_max(4.h * task.attempt, 'time') }
        queue = { task.time <= 4.h ? 'short.q' : 'long.q' }
        maxForks = 400
    }

    withName: 'PREPDATA.*' {
        cpus = 8
        memory = { check_max(10.GB * task.attempt, 'memory') }
        time = { check_max(4.h * task.attempt, 'time') }
        queue = { task.time <= 4.h ? 'short.q' : 'long.q' }
        maxForks = 400
    }

    withName: 'REALFFT.*|REDNOISE.*' {
        cpus = 8
        memory = { check_max(16.GB * task.attempt, 'memory') }
        time = { check_max(4.h * task.attempt, 'time') }
        queue = { task.time <= 4.h ? 'short.q' : 'long.q' }
        maxForks = 400
    }

    withName: 'ACCELSEARCH' {
        cpus = 16
        memory = { check_max(30.GB * task.attempt, 'memory') }
        time = { check_max(6.d * task.attempt, 'time') }
        queue = { params.use_cuda ? 'gpu.q' : (task.time <= 4.h ? 'short.q' : 'long.q') }
        clusterOptions = { params.use_cuda ? '--gres=gpu:1' : '' }
        maxForks = 200
    }

    withName: 'ACCELSEARCH_ZMAX0|ACCELSEARCH_JERK' {
        cpus = 8
        memory = { check_max(20.GB * task.attempt, 'memory') }
        time = { check_max(12.h * task.attempt, 'time') }
        queue = { task.time <= 4.h ? 'short.q' : 'long.q' }
        maxForks = 200
    }

    withName: 'PREPFOLD.*' {
        cpus = 8
        memory = { check_max(16.GB * task.attempt, 'memory') }
        time = { check_max(6.h * task.attempt, 'time') }
        queue = { task.time <= 4.h ? 'short.q' : 'long.q' }
        maxForks = 400
    }

    withName: 'SINGLE_PULSE_SEARCH' {
        cpus = 4
        memory = { check_max(8.GB * task.attempt, 'memory') }
        time = { check_max(4.h * task.attempt, 'time') }
        queue = { task.time <= 4.h ? 'short.q' : 'long.q' }
        maxForks = 500
    }

    withName: 'MAKE_ZAPLIST|COMBINE_CANDIDATES|ACCELSIFT' {
        cpus = 2
        memory = { check_max(4.GB * task.attempt, 'memory') }
        time = { check_max(1.h * task.attempt, 'time') }
        queue = 'short.q'
        maxForks = 500
        scratch = false
    }
}

// Helper function to check max values
def check_max(obj, type) {
    if (type == 'memory') {
        try {
            if (obj.compareTo(params.max_memory as nextflow.util.MemoryUnit) == 1)
                return params.max_memory as nextflow.util.MemoryUnit
            else
                return obj
        } catch (all) {
            println "ERROR: Invalid memory: ${obj}"
            return obj
        }
    } else if (type == 'time') {
        try {
            if (obj.compareTo(params.max_time as nextflow.util.Duration) == 1)
                return params.max_time as nextflow.util.Duration
            else
                return obj
        } catch (all) {
            println "ERROR: Invalid time: ${obj}"
            return obj
        }
    } else if (type == 'cpus') {
        try {
            return Math.min(obj as int, params.max_cpus as int)
        } catch (all) {
            println "ERROR: Invalid cpus: ${obj}"
            return obj
        }
    }
}
