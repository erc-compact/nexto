/*
 * OzSTAR Configuration
 * Swinburne HPC Cluster
 */

// Validate we're running on the correct cluster
if (!['farnarkle'].any { System.getenv('HOSTNAME')?.startsWith(it) }) {
    System.err.println "ERROR: This configuration is for OzSTAR (farnarkle) cluster only"
    System.exit(1)
}

params {
    // Container images
    presto_container = "/fred/oz418/singularity_images/presto_latest.sif"
    singularity_cachedir = "/fred/oz418/singularity_images"

    // Resource limits
    max_cpus = 32
    max_memory = '128.GB'
    max_time = '168.h'
}

// Apptainer/Singularity configuration
apptainer {
    enabled = true
    autoMounts = true
    runOptions = '--env PYTHONNOUSERSITE=1 --nv -B /fred -B $HOME:$HOME'
    cacheDir = params.singularity_cachedir
    envWhitelist = 'APPTAINER_BINDPATH,APPTAINER_LD_LIBRARY_PATH'
}

// Executor configuration
executor {
    name = 'slurm'
    pollInterval = '1 min'
    queueSize = 2000
    submitRateLimit = '20 sec'
}

// Process configuration
process {
    executor = 'slurm'
    module = 'apptainer'
    scratch = '$JOBFS'

    // Error handling
    errorStrategy = { task.exitStatus in 137..140 || task.exitStatus == 124 ? 'retry' : 'finish' }
    maxRetries = 3
    maxErrors = '-1'

    // Resource scaling on retries
    cpus = { check_max(task.attempt * 2, 'cpus') }
    memory = { check_max(4.GB * task.attempt, 'memory') }
    time = { check_max(4.h * task.attempt, 'time') }

    // Label-specific resources
    withLabel: 'process_low' {
        cpus = 2
        memory = { check_max(4.GB * task.attempt, 'memory') }
        time = { check_max(2.h * task.attempt, 'time') }
        maxForks = 400
    }

    withLabel: 'process_medium' {
        cpus = 4
        memory = { check_max(8.GB * task.attempt, 'memory') }
        time = { check_max(4.h * task.attempt, 'time') }
        maxForks = 400
    }

    withLabel: 'process_high' {
        cpus = 8
        memory = { check_max(16.GB * task.attempt, 'memory') }
        time = { check_max(12.h * task.attempt, 'time') }
        maxForks = 250
    }

    withLabel: 'process_very_high' {
        cpus = 16
        memory = { check_max(32.GB * task.attempt, 'memory') }
        time = { check_max(24.h * task.attempt, 'time') }
        maxForks = 100
    }

    // Process-specific resources
    withName: 'RFIFIND' {
        cpus = 4
        memory = { check_max(8.GB * task.attempt, 'memory') }
        time = { check_max(2.h * task.attempt, 'time') }
        maxForks = 400
    }

    withName: 'PREPDATA.*' {
        cpus = 2
        memory = { check_max(6.GB * task.attempt, 'memory') }
        time = { check_max(4.h * task.attempt, 'time') }
        maxForks = 400
    }

    withName: 'REALFFT.*|REDNOISE.*' {
        cpus = 4
        memory = { check_max(8.GB * task.attempt, 'memory') }
        time = { check_max(3.h * task.attempt, 'time') }
        maxForks = 400
    }

    withName: 'ACCELSEARCH.*' {
        cpus = 8
        memory = { check_max(16.GB * task.attempt, 'memory') }
        time = { check_max(12.h * task.attempt, 'time') }
        maxForks = 200
        clusterOptions = { params.use_cuda ? '--gres=gpu:1' : '' }
    }

    withName: 'PREPFOLD.*' {
        cpus = 4
        memory = { check_max(10.GB * task.attempt, 'memory') }
        time = { check_max(6.h * task.attempt, 'time') }
        maxForks = 400
    }

    withName: 'SINGLE_PULSE_SEARCH' {
        cpus = 2
        memory = { check_max(5.GB * task.attempt, 'memory') }
        time = { check_max(2.h * task.attempt, 'time') }
        maxForks = 400
    }

    withName: 'MAKE_ZAPLIST|COMBINE_CANDIDATES|ACCELSIFT' {
        cpus = 1
        memory = { check_max(2.GB * task.attempt, 'memory') }
        time = { check_max(1.h * task.attempt, 'time') }
        maxForks = 500
        scratch = false
    }
}

// Helper function to check max values
def check_max(obj, type) {
    if (type == 'memory') {
        try {
            if (obj.compareTo(params.max_memory as nextflow.util.MemoryUnit) == 1)
                return params.max_memory as nextflow.util.MemoryUnit
            else
                return obj
        } catch (all) {
            println "ERROR: Invalid memory: ${obj}"
            return obj
        }
    } else if (type == 'time') {
        try {
            if (obj.compareTo(params.max_time as nextflow.util.Duration) == 1)
                return params.max_time as nextflow.util.Duration
            else
                return obj
        } catch (all) {
            println "ERROR: Invalid time: ${obj}"
            return obj
        }
    } else if (type == 'cpus') {
        try {
            return Math.min(obj as int, params.max_cpus as int)
        } catch (all) {
            println "ERROR: Invalid cpus: ${obj}"
            return obj
        }
    }
}
