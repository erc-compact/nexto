/*
 * Contra Configuration
 * MPIfR Bonn HT-Condor Cluster
 */

params {
    // Container images
    presto_container = "/homes/vkrishnan/singularity_images/presto_latest.sif"
    singularity_cachedir = "/homes/vkrishnan/singularity_images"

    // Resource limits
    max_cpus = 48
    max_memory = '256.GB'
    max_time = '240.h'
}

// Module loading
process.beforeScript = """
module load jdk/17.0.4
module load apptainer
"""

// Apptainer/Singularity configuration
apptainer {
    enabled = true
    autoMounts = false
    runOptions = '--env="CUDA_VISIBLE_DEVICES=${CUDA_VISIBLE_DEVICES}" -B /b -B /bscratch -B /homes --nv'
    cacheDir = params.singularity_cachedir
}

// Executor configuration
executor {
    name = 'condor'
    queueSize = 1500
    pollInterval = '30 sec'
    submitRateLimit = '20 sec'
}

// Process configuration
process {
    executor = 'condor'
    scratch = false  // $TMPFS not supported on Contra

    // Error handling
    errorStrategy = { task.exitStatus in 137..140 || task.exitStatus == 124 ? 'retry' : 'ignore' }
    maxRetries = 3
    maxErrors = '-1'

    // Resource scaling on retries
    memory = { check_max(12.GB * task.attempt, 'memory') }
    time = { check_max(4.h * task.attempt, 'time') }

    // Label-specific resources
    withLabel: 'process_low' {
        cpus = 4
        memory = { check_max(8.GB * task.attempt, 'memory') }
        time = { check_max(2.h * task.attempt, 'time') }
        maxForks = 300
    }

    withLabel: 'process_medium' {
        cpus = 8
        memory = { check_max(16.GB * task.attempt, 'memory') }
        time = { check_max(4.h * task.attempt, 'time') }
        maxForks = 300
    }

    withLabel: 'process_high' {
        cpus = 10
        memory = { check_max(25.GB * task.attempt, 'memory') }
        time = { check_max(10.h * task.attempt, 'time') }
        maxForks = 200
    }

    withLabel: 'process_very_high' {
        cpus = 20
        memory = { check_max(50.GB * task.attempt, 'memory') }
        time = { check_max(20.h * task.attempt, 'time') }
        maxForks = 100
    }

    // Process-specific resources
    withName: 'RFIFIND' {
        cpus = 4
        memory = { check_max(12.GB * task.attempt, 'memory') }
        time = { check_max(4.h * task.attempt, 'time') }
        maxForks = 200
    }

    withName: 'PREPDATA.*' {
        cpus = 10
        memory = { check_max(25.GB * task.attempt, 'memory') }
        time = { check_max(10.h * task.attempt, 'time') }
        maxForks = 400
    }

    withName: 'REALFFT.*|REDNOISE.*' {
        cpus = 8
        memory = { check_max(20.GB * task.attempt, 'memory') }
        time = { check_max(6.h * task.attempt, 'time') }
        maxForks = 300
    }

    withName: 'ACCELSEARCH' {
        cpus = 1
        memory = { check_max(50.GB * task.attempt, 'memory') }
        time = { check_max(10.h * task.attempt, 'time') }
        clusterOptions = 'request_GPUs = 1'
        maxForks = 160
    }

    withName: 'ACCELSEARCH_ZMAX0|ACCELSEARCH_JERK' {
        cpus = 8
        memory = { check_max(25.GB * task.attempt, 'memory') }
        time = { check_max(8.h * task.attempt, 'time') }
        maxForks = 200
    }

    withName: 'PREPFOLD.*' {
        cpus = 8
        memory = { check_max(16.GB * task.attempt, 'memory') }
        time = { check_max(6.h * task.attempt, 'time') }
        maxForks = 300
    }

    withName: 'SINGLE_PULSE_SEARCH' {
        cpus = 4
        memory = { check_max(8.GB * task.attempt, 'memory') }
        time = { check_max(4.h * task.attempt, 'time') }
        maxForks = 300
    }

    withName: 'MAKE_ZAPLIST|COMBINE_CANDIDATES|ACCELSIFT' {
        cpus = 2
        memory = { check_max(4.GB * task.attempt, 'memory') }
        time = { check_max(2.h * task.attempt, 'time') }
        maxForks = 300
    }

    withName: 'ZAPBIRDS' {
        cpus = 4
        memory = { check_max(8.GB * task.attempt, 'memory') }
        time = { check_max(3.h * task.attempt, 'time') }
        maxForks = 300
    }
}

// Helper function to check max values
def check_max(obj, type) {
    if (type == 'memory') {
        try {
            if (obj.compareTo(params.max_memory as nextflow.util.MemoryUnit) == 1)
                return params.max_memory as nextflow.util.MemoryUnit
            else
                return obj
        } catch (all) {
            println "ERROR: Invalid memory: ${obj}"
            return obj
        }
    } else if (type == 'time') {
        try {
            if (obj.compareTo(params.max_time as nextflow.util.Duration) == 1)
                return params.max_time as nextflow.util.Duration
            else
                return obj
        } catch (all) {
            println "ERROR: Invalid time: ${obj}"
            return obj
        }
    } else if (type == 'cpus') {
        try {
            return Math.min(obj as int, params.max_cpus as int)
        } catch (all) {
            println "ERROR: Invalid cpus: ${obj}"
            return obj
        }
    }
}
