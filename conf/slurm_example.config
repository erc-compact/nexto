/*
 * Generic SLURM Configuration Template
 * Copy and customize for your SLURM cluster
 */

// Validate hostname (optional - customize or remove)
// if (!['your-cluster-prefix'].any { System.getenv('HOSTNAME')?.startsWith(it) }) {
//     System.err.println "ERROR: This configuration is for YOUR_CLUSTER only"
//     System.exit(1)
// }

params {
    // Container images - CUSTOMIZE THESE PATHS
    presto_container = "/path/to/singularity_images/presto_latest.sif"
    singularity_cachedir = "/path/to/singularity_cache"

    // Resource limits - CUSTOMIZE FOR YOUR CLUSTER
    max_cpus = 32
    max_memory = '128.GB'
    max_time = '72.h'
}

// Module loading (if needed) - CUSTOMIZE OR REMOVE
// process.beforeScript = """
// module load apptainer
// module load cuda/11.8
// """

// Apptainer/Singularity configuration
apptainer {
    enabled = true
    autoMounts = true
    // CUSTOMIZE bind mounts for your filesystem
    runOptions = '--env PYTHONNOUSERSITE=1 --nv -B /scratch -B /data -B $HOME'
    cacheDir = params.singularity_cachedir
    envWhitelist = 'APPTAINER_BINDPATH,APPTAINER_LD_LIBRARY_PATH'
}

// Executor configuration
executor {
    name = 'slurm'
    pollInterval = '1 min'
    queueSize = 500  // CUSTOMIZE: max concurrent jobs
    submitRateLimit = '10 sec'
}

// Process configuration
process {
    executor = 'slurm'

    // CUSTOMIZE: default queue/partition
    queue = 'normal'

    // CUSTOMIZE: account/project (or remove if not needed)
    // clusterOptions = '--account=your_account'

    // CUSTOMIZE: scratch space (or set to false if not available)
    scratch = '$TMPDIR'

    // Error handling
    errorStrategy = { task.exitStatus in 137..140 || task.exitStatus == 124 ? 'retry' : 'finish' }
    maxRetries = 3
    maxErrors = '-1'

    // Resource scaling on retries
    cpus = { check_max(task.attempt * 2, 'cpus') }
    memory = { check_max(4.GB * task.attempt, 'memory') }
    time = { check_max(4.h * task.attempt, 'time') }

    // Label-specific resources
    withLabel: 'process_low' {
        cpus = 2
        memory = { check_max(8.GB * task.attempt, 'memory') }
        time = { check_max(2.h * task.attempt, 'time') }
        queue = 'short'  // CUSTOMIZE queue names
    }

    withLabel: 'process_medium' {
        cpus = 4
        memory = { check_max(16.GB * task.attempt, 'memory') }
        time = { check_max(4.h * task.attempt, 'time') }
        queue = 'normal'
    }

    withLabel: 'process_high' {
        cpus = 8
        memory = { check_max(32.GB * task.attempt, 'memory') }
        time = { check_max(12.h * task.attempt, 'time') }
        queue = 'normal'
    }

    withLabel: 'process_very_high' {
        cpus = 16
        memory = { check_max(64.GB * task.attempt, 'memory') }
        time = { check_max(24.h * task.attempt, 'time') }
        queue = 'long'
    }

    // Process-specific resources - CUSTOMIZE as needed
    withName: 'RFIFIND' {
        cpus = 4
        memory = { check_max(16.GB * task.attempt, 'memory') }
        time = { check_max(4.h * task.attempt, 'time') }
    }

    withName: 'PREPDATA.*' {
        cpus = 4
        memory = { check_max(12.GB * task.attempt, 'memory') }
        time = { check_max(6.h * task.attempt, 'time') }
    }

    withName: 'REALFFT.*|REDNOISE.*' {
        cpus = 4
        memory = { check_max(16.GB * task.attempt, 'memory') }
        time = { check_max(4.h * task.attempt, 'time') }
    }

    withName: 'ACCELSEARCH' {
        cpus = 8
        memory = { check_max(32.GB * task.attempt, 'memory') }
        time = { check_max(12.h * task.attempt, 'time') }
        // CUSTOMIZE for GPU queue if using CUDA
        // queue = 'gpu'
        // clusterOptions = '--gres=gpu:1'
    }

    withName: 'ACCELSEARCH_ZMAX0|ACCELSEARCH_JERK' {
        cpus = 8
        memory = { check_max(24.GB * task.attempt, 'memory') }
        time = { check_max(8.h * task.attempt, 'time') }
    }

    withName: 'PREPFOLD.*' {
        cpus = 4
        memory = { check_max(16.GB * task.attempt, 'memory') }
        time = { check_max(6.h * task.attempt, 'time') }
    }

    withName: 'SINGLE_PULSE_SEARCH' {
        cpus = 2
        memory = { check_max(8.GB * task.attempt, 'memory') }
        time = { check_max(4.h * task.attempt, 'time') }
    }

    withName: 'MAKE_ZAPLIST|COMBINE_CANDIDATES|ACCELSIFT|ZAPBIRDS' {
        cpus = 2
        memory = { check_max(4.GB * task.attempt, 'memory') }
        time = { check_max(2.h * task.attempt, 'time') }
        queue = 'short'
    }
}

// Helper function to check max values
def check_max(obj, type) {
    if (type == 'memory') {
        try {
            if (obj.compareTo(params.max_memory as nextflow.util.MemoryUnit) == 1)
                return params.max_memory as nextflow.util.MemoryUnit
            else
                return obj
        } catch (all) {
            println "ERROR: Invalid memory: ${obj}"
            return obj
        }
    } else if (type == 'time') {
        try {
            if (obj.compareTo(params.max_time as nextflow.util.Duration) == 1)
                return params.max_time as nextflow.util.Duration
            else
                return obj
        } catch (all) {
            println "ERROR: Invalid time: ${obj}"
            return obj
        }
    } else if (type == 'cpus') {
        try {
            return Math.min(obj as int, params.max_cpus as int)
        } catch (all) {
            println "ERROR: Invalid cpus: ${obj}"
            return obj
        }
    }
}
